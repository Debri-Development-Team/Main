<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/item_hour_layout"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/item_hour_time_tv"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="10:00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_hour_schedule_time_tv"
            android:text="01:00"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_hour_schedule_title_tv"
            android:text="SQL 스터디"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/yellow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_hour_schedule_detail_tv"
            android:text="location / info"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            />



</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>