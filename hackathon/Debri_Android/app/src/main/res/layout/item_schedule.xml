<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/item_layout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_schedule_time_tv"
            android:text="01:00"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_schedule_title_tv"
            android:text="SQL 스터디"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/yellow"
            />

    </LinearLayout>

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/border_round_item_next"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/item_layout"
        app:layout_constraintBottom_toBottomOf="@+id/item_layout"
        app:layout_constraintEnd_toEndOf="@+id/item_layout"/>



</androidx.constraintlayout.widget.ConstraintLayout>